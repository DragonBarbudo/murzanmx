mixin navigation(url)
  if url
    - absolute = "index.html"
  else
    - absolute = ""
  .navbar(role="navigation")
    .container
      .navbar-brand
        a(href="index.html").navbar-item.has-text-centered
          img(src="app/img/murzanmexico.gif", alt="Murzan México")
        .navbar-burger.burger
          span
          span
          span
      .navbar-menu#menu
        .navbar-end
          +navitems(absolute)
            

mixin navitems(absolute)
  - if(absolute){absolute="productos.html"}
  .navbar-item.link-nos
    .dropdown.is-hoverable
      a(href="nosotros.html").dropdown-trigger=menu_n[lng]
      .dropdown-menu
        .dropdown-item: a(href="representaciones.html")=menu_r[lng]
  .navbar-item.link-prod
    .dropdown.is-hoverable
      a(href="#productos").dropdown-trigger=menu_np[lng]
      .dropdown-menu
        .dropdown-item: a(href=absolute+"#bomba-pi-50") BOMBA PI-50
        .dropdown-item: a(href=absolute+"#bomba-po-50") BOMBA PO-50
        .dropdown-item: a(href=absolute+"#sistema-dus-50") SISTEMA DUS-50
        .dropdown-item: a(href=absolute+"#sistema-tus-50") SISTEMA TUS-50
        .dropdown-item: a(href=absolute+"#sistema-kus-50") SISTEMA KUS-50
        .dropdown-item: a(href=absolute+"#sistema-cbtu-50") SISTEMA CBTU-50
        .dropdown-item: a(href=absolute+"#sistema-psw-70") SISTEMA PSW-70
        .dropdown-item: a(href=absolute+"#sistema-d-150") SISTEMA D-150
        .dropdown-item: a(href=absolute+"#recuperador-de-producto") RECUPERADOR DE PRODUCTO
        .dropdown-item: a(href=absolute+"#proyectos-e-ingenieria") PROYECTOS E INGENIERÍA
  .navbar-item.link-cont: a(href="contacto.html")=menu_c[lng]
  
  
mixin socialnetworks
  .socialnetworks.columns.is-mobile.has-text-centered
    a(href="#" target="_blank").column.fb: i.fa.fa-facebook
    a(href="#" target="_blank").column.tw: i.fa.fa-twitter
    a(href="" target="_blank").column.li: i.fa.fa-linkedin
    a(href="" target="_blank").column.in: i.fa.fa-instagram
    a(href="" target="_blank").column.yt: i.fa.fa-youtube-play
  
