  .topbar.is-hidden-mobile: .container
    .level
      .level-left
        .level-item
          .icon.is-small: i.fa.fa-phone
          |  5528·2384
        .level-item
          .icon.is-small: i.fa.fa-phone
          | 5528·2357
        .level-item
          .icon.is-small: i.fa.fa-phone
          | 5528·2367
      
      
      .level-right
        .level-item
          a(href="mailto:murzan@murzanmexico.com.mx")
            .icon.is-small: i.fa.fa-envelope
            | murzan@murzanmexico.com.mx
          
          //+socialnetworks


mixin footer
  footer
    .section
      .container
        .columns
          .column
            h4.is-size-5=foot_add_t[lng]
            p=foot_add_t2[lng]
            p: strong=foot_add_t3[lng]
            p: strong=foot_add_t4[lng]
            hr
            h4.is-size-5=foot_add2_t[lng]
            p=foot_add2_t2[lng]
            p: strong=foot_add2_t3[lng]
            p: strong=foot_add2_t4[lng]
          .column
            h4.is-size-5=foot_productos[lng]
            +navitems("")
            
          .column
            h4.is-size-5=foot_representaciones[lng]
            each rep in foot_reps[lng]
              
              p: strong=rep[0]
              p=rep[1]
            
          
    hr
    .section
      .container.has-text-centered
        p=copy[lng]


mixin pleca
  .pleca
    .section: .container
      .columns.is-mobile.is-multiline
        .column.is-12-mobile: h3.is-size-5: strong !{pleca_ind[lng]}
        .column.is-half-mobile
          figure.image: img(src="app/img/ic-food.png")
          p !{pleca_comida[lng]}
        .column.is-half-mobile
          figure.image: img(src="app/img/ic-beve.png")
          p !{pleca_bebidas[lng]}
        .column.is-half-mobile
          figure.image: img(src="app/img/ic-poul.png")
          p !{pleca_aves[lng]}
        .column.is-half-mobile
          figure.image: img(src="app/img/ic-phar.png")
          p !{pleca_farma[lng]}
        .column.is-12-mobile
          figure.image: img(src="app/img/ic-cosm.png")
          p !{pleca_cosme[lng]}
