mixin navigation(url)
  if url
    - absolute = "index.html"
  else
    - absolute = ""
  .navbar(role="navigation")
    .container
      .navbar-brand
        a(href="#inicio").navbar-item.has-text-centered
          img(src="app/img/murzanmexico.gif", alt="Murzan México")
        .navbar-burger.burger
          span
          span
          span
      .navbar-menu#menu
        .navbar-end
          +navitems(absolute)
            

mixin navitems(absolute)

  .navbar-item.link-nos
    .dropdown.is-hoverable
      a(href=absolute+"#nosotros").dropdown-trigger NOSOTROS
      .dropdown-menu
        .dropdown-item: a(href="#") Representaciones
  .navbar-item.link-prod
